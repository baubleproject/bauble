// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Profile {
    id              String   @id @default(uuid())
    userId          String   @unique
    name            String
    bio             String?
    profileImageUrl String   @db.Text
    headerImageUrl  String   @db.Text
    email           String   @db.Text
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    followedBy Follows[] @relation("follower")
    following  Follows[] @relation("following")
}

model Follows {
    follower    Profile @relation("follower", fields: [followerId], references: [id])
    followerId  String
    following   Profile @relation("following", fields: [followingId], references: [id])
    followingId String

    @@id([followerId, followingId])
}
